# Node.js version to use
node_version=18.19.0

# NPM version to use
npm_version=9.6.7

# Assets directory
assets_path=assets

# Disable the default phoenix compile step
compile=false

# Build commands  
hook_pre_compile="cd assets && npm install"
hook_compile="cd assets && npm run build && mix phx.digest"
hook_post_compile="ls -la priv/static/ | grep gif || echo 'No gif files found'"