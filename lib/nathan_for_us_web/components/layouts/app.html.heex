<header class="business-header">
  <div class="business-container">
    <div style="display: flex; align-items: center; justify-content: space-between; padding: 1rem 0;">
      <.link navigate={~p"/"} class="business-logo">
        <div class="business-logo-icon">
          N
        </div>
        <span>The Business Understander</span>
      </.link>
      <nav class="business-nav">
        <%= if assigns[:current_user] do %>
          <.link navigate={~p"/posts/new"} class="business-btn business-btn--primary">
            Post
          </.link>
          <.link navigate={~p"/users/#{@current_user.id}"} class="business-btn business-btn--secondary">
            Profile
          </.link>
          <.link href={~p"/users/log_out"} method="delete" class="business-btn business-btn--danger">
            Log Out
          </.link>
        <% else %>
          <.link navigate={~p"/users/log_in"} class="business-btn business-btn--primary">
            Log In
          </.link>
          <.link navigate={~p"/users/register"} class="business-btn business-btn--success">
            Sign Up
          </.link>
        <% end %>
      </nav>
    </div>
  </div>
</header>
<main class="business-main">
  <div class="business-container">
    <.flash_group flash={@flash} />
    {@inner_content}
  </div>
</main>
